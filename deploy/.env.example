NODE_ENV=production
PORT=3000
LOG_LEVEL=info

BOT_TOKEN=
TELEGRAM_ALLOWED_USER_IDS=
TELEGRAM_ALLOWED_CHAT_IDS=

# false = polling, true = webhook
TELEGRAM_USE_WEBHOOK=false
TELEGRAM_WEBHOOK_DOMAIN=
TELEGRAM_WEBHOOK_PATH=
TELEGRAM_WEBHOOK_SECRET_TOKEN=

DATABASE_URL=postgresql://telegram_anytype:telegram_anytype@postgres:5432/telegram_anytype
REDIS_URL=redis://redis:6379
QUEUE_NAME=telegram-anytype-commands

# MCP settings
MCP_TRANSPORT=http
MCP_HTTP_URL=
MCP_HTTP_HEADERS_JSON={}
MCP_STDIO_COMMAND=
MCP_STDIO_ARGS=
MCP_STDIO_ENV_JSON={}
# Example Anytype MCP via stdio:
# MCP_TRANSPORT=stdio
# MCP_STDIO_COMMAND=npx
# MCP_STDIO_ARGS=-y,@anyproto/anytype-mcp
# MCP_STDIO_ENV_JSON={"OPENAPI_MCP_HEADERS":"{\"Authorization\":\"Bearer <anytype-token>\", \"Anytype-Version\":\"2025-05-20\"}"}

# Anytype profile
ANYTYPE_SPACE_ID=
ANYTYPE_CATALOG_OBJECT_ID=
# list_id коллекции Inbox DB (2Brain); см. Каталог контекста в Anytype
ANYTYPE_INBOX_COLLECTION_ID=
ANYTYPE_INBOX_PAGE_TITLE=01 Inbox
ANYTYPE_DAY_PLAN_TITLE_PREFIX=План
ANYTYPE_INBOX_NOTE_TITLE_PREFIX=Inbox
ANYTYPE_SEARCH_LIMIT=20

# OpenRouter classifier (optional)
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=openai/gpt-4o-mini
LLM_CLASSIFIER_ENABLED=false
LLM_CLASSIFIER_MIN_CONFIDENCE=0.75
